---
const pathname = Astro.url.pathname;
const isWeddingHome = pathname === '/wedding' || pathname === '/wedding/';
const isGallery = pathname.includes('/wedding/gallery');
const isRsvp = pathname.includes('/wedding/rsvp');
---

<div class="border-b border-gray-200 bg-white">
  <div class="container mx-auto px-4">
    <nav class="flex justify-center">
      <ul class="flex space-x-8 py-3 whitespace-nowrap overflow-x-auto">
        <li>
          <a 
            href="/wedding" 
            class={`text-gray-700 hover:text-rose-700 transition ${isWeddingHome ? 'font-bold text-rose-700 border-b-2 border-rose-700 pb-1' : ''}`}
          >
            Wedding Home
          </a>
        </li>
        <li>
          <a 
            href="/wedding/gallery" 
            class={`text-gray-700 hover:text-rose-700 transition ${isGallery ? 'font-bold text-rose-700 border-b-2 border-rose-700 pb-1' : ''}`}
          >
            Gallery
          </a>
        </li>
        <li>
          <a 
            href="/wedding/rsvp" 
            class={`text-gray-700 hover:text-rose-700 transition ${isRsvp ? 'font-bold text-rose-700 border-b-2 border-rose-700 pb-1' : ''}`}
          >
            RSVP
          </a>
        </li>
        <li>
          <a href="/wedding#wedding-party" class="text-gray-700 hover:text-rose-700 transition">Wedding Party</a>
        </li>
        <li>
          <a href="/wedding#registry" class="text-gray-700 hover:text-rose-700 transition">Registry</a>
        </li>
        <li>
          <a href="/wedding#guestbook" class="text-gray-700 hover:text-rose-700 transition">Guest Book</a>
        </li>
      </ul>
    </nav>
  </div>
</div>
