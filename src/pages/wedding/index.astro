---
import WeddingLayout from '../../layouts/WeddingLayout.astro';
import WeddingCountdown from '../../components/WeddingCountdown.vue';
import Image from 'astro/components/Image.astro';
import GuestBook from '../../components/GuestBook.vue';

---

<WeddingLayout title="Our Wedding">


  <!-- Section 1-->
  <section class="my-12" >
       
     <!-- TITLE SECTION -->
  <div class="text-center mt-8 mb-8">
    <p class="font-thin">THE <span class="fancy-font text-5xl mx-3 font-thin">Wedding</span> OF </p>
    <p class="text-3xl uppercase mt-3 font-medium">Makenzie & Jayden</p>
    <p class="mt-4 text-base text-zinc-500">May 22, 2026<br/>Frankfort, Indiana</p>
    <div class="flex justify-center mt-4">
      <a href="/wedding/rsvp">
      <button class="border border-green text-green py-2 px-4 rounded hover:text-zinc-200 transition">
        RSVP
      </button>
      </a>
       <a href="https://www.myregistry.com/wedding-registry/jayden-diaz-and-makenzie-wilson-longwood-fl/4860873/giftlist" target="_blank">
       <button class="border border-green text-green py-2 px-4 ml-2 mr-2 rounded hover:text-zinc-200 transition">
        Registry
      </button>
      </a>
      <a href="/wedding/gallery">
      <button class="border border-green text-green py-2 px-4 rounded hover:text-zinc-200 transition">
        Gallery
      </button>
      </a>

    </div>

  </div>


        <div class="grid grid-cols-[1fr_3fr_1fr] items-center mt-5">
      <div class="euc-l"></div>
      <div> 
        <Image 
        src={import("../../assets/P1240400.jpg")}  
        alt="Couple Photo"  
        class="rounded-lg h-auto w-auto "/>
      </div>
      <div class="euc-r"></div>
    </div>
   
    <div class="my-10">
      <WeddingCountdown client:load weddingDate="2026-05-22T16:00:00"/>
    </div>
 
  </section><!--end section 1 -->

  <!-- Event Information -->
  <section class="my-12" id="details">
    <div class="container mx-auto px-4">
      <p class="text-3xl text-center text-green font-600 uppercase mb-10">Event Details</p>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
       
        <div class="bg-zinc-300 rounded-lg shadow-md p-6 text-center">
          <div class="w-16 h-16 bg-green rounded-full flex items-center justify-center mx-auto mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-zinc-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
          <h3 class="text-2xl uppercase font-bold text-zinc-900 mb-2">Ceremony</h3>
         <p class="text-xl text-zinc-700 mb-2">Friday</p>
          <p class="text-xl text-zinc-700 mb-2">May 22, 2026</p>
          <p class="text-xl text-zinc-700 ">12:00 PM</p>
        </div>
        
         <div class="bg-zinc-300 rounded-lg shadow-md p-6 text-center">
           <div class="w-16 h-16 bg-green rounded-full flex items-center justify-center mx-auto mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-zinc-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
