---
import WeddingLayout from '../../layouts/WeddingLayout.astro';
import Gallery from '../../components/Gallery.vue';
---

<WeddingLayout title="Wedding Gallery">
  <section class="py-12">
    <div class="container mx-auto px-4">
      <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Our Gallery</h1>
      <p class="text-center text-gray-600 max-w-2xl mx-auto mb-12">
        Browse through our favorite moments together.
      </p>
      
      <Gallery client:load />
    </div>
  </section>
</WeddingLayout>
